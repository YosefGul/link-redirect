generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  username     String    @unique
  email        String    @unique
  passwordHash String    @map("password_hash")
  role         UserRole  @default(USER)
  createdAt    DateTime  @default(now()) @map("created_at")
  
  shortLinks   ShortLink[]

  @@map("users")
}

enum UserRole {
  ADMIN
  USER
}

model ShortLink {
  id           Int       @id @default(autoincrement())
  slug         String    @unique @db.VarChar(64)
  targetUrl    String    @map("target_url") @db.Text
  ownerId      String    @map("owner_id")
  hits         BigInt    @default(0)
  isActive     Boolean   @default(true) @map("is_active")
  allowEdit    Boolean   @default(true) @map("allow_edit")
  expiresAt    DateTime? @map("expires_at")
  passwordHash String?   @map("password_hash") @db.Text
  maxClicks    Int?      @map("max_clicks")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  
  owner        User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  logs         LinkLog[]

  @@index([ownerId])
  @@index([slug])
  @@index([expiresAt])
  @@map("short_links")
}

model LinkLog {
  id         BigInt   @id @default(autoincrement())
  linkId     Int      @map("link_id")
  ip         String?  @db.Inet
  userAgent  String?  @map("user_agent") @db.Text
  referer    String?  @db.Text
  country    String?  @db.VarChar(64)
  os         String?  @db.VarChar(64)
  deviceType String?  @map("device_type") @db.VarChar(32)
  city       String?  @db.VarChar(128)
  language   String?  @db.VarChar(16)
  createdAt  DateTime @default(now()) @map("created_at")
  
  link       ShortLink @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@index([linkId])
  @@index([createdAt])
  @@map("link_logs")
}

